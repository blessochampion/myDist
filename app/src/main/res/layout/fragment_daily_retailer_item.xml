<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_retailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Retailer 6"
        android:textColor="@color/crispy_green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/hvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_retailer_name"
        android:layout_marginTop="4dp"
        android:text="HVP4O"
        android:textColor="@color/primary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_hvp_value"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_retailer_name"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/hvp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/stgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_retailer_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tv_hvp_value"
        android:text="Stgt"
        android:textColor="@color/primary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/stgt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_retailer_name"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/stgt"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:text="26,534.70"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hvp_value"
        android:layout_marginTop="4dp"
        android:text="Dist"
        android:textColor="@color/primary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_dst_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_hvp_value"
        android:layout_alignRight="@id/tv_hvp_value"
        android:layout_below="@id/tv_hvp_value"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/hvp"
        android:gravity="left"
        android:text="3/5"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/merch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/stgt"
        android:layout_below="@id/tv_hvp_value"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tv_dst_value"
        android:text="Merch"
        android:textColor="@color/primary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_merch_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/stgt_value"
        android:layout_alignRight="@id/stgt_value"
        android:layout_below="@id/tv_hvp_value"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/merch"
        android:gravity="left"
        android:text="3/5"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:textSize="32sp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/fa_icon_info_circle" />

</RelativeLayout>