<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <FrameLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white_grey"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.3"
                            android:text="@string/username"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <EditText
                            android:id="@+id/et_username"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@drawable/login_activity_edit_text"
                            android:inputType="text"
                            android:maxLines="1"
                            android:minHeight="40dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:textColor="@color/secondary_text"
                            android:textColorHint="@color/secondary_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.3"
                            android:text="@string/password"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@drawable/login_activity_edit_text"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:minHeight="40dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:textColor="@color/secondary_text"
                            android:textColorHint="@color/secondary_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:checked="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.3"
                            android:text="@string/synchronization_with_images"
                            android:textColor="@color/secondary_text" />

                        <CheckBox
                            android:id="@+id/cb_close_for_the_day"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6.5"
                            android:text="@string/synchronization_close_for_the_day"
                            android:textColor="@color/secondary_text" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:textAllCaps="false"
                            android:id="@+id/synchronization_activity_download"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/download_button"
                            android:text="@string/download"
                            android:textColor="@color/colorPrimary" />

                        <Button
                            android:textAllCaps="false"
                            android:id="@+id/bt_start_sync"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:text="@string/start_sync"
                            android:textColor="@color/white_grey" />

                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>
        </FrameLayout>
    </ScrollView>

</LinearLayout>