<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="72dp"
    android:padding="1dp">

    <TextView
        android:id="@+id/invoice_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        android:text="@string/pay"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/invoice_number"
        android:layout_below="@id/invoice_number"
        android:paddingLeft="8dp"
        android:text="Value: "
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/invoice_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/invoice_number"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/value_label"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="3000.56"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/invoice_number"
        android:layout_toRightOf="@id/invoice_value"
        android:paddingLeft="8dp"
        android:text="@string/amount_label"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/invoice_number"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/amount_label"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textColor="@color/secondary_text" />


</RelativeLayout>