<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/crispy_white"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_welcome_message"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/home_username" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">


                <LinearLayout
                    android:id="@+id/ll_coverage"
                    android:padding="0.1dp"
                    android:elevation="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/item_background"
                    android:orientation="horizontal"
                    >

                    <FrameLayout

                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_background_image">

                        <TextView
                            android:textSize="32sp"
                            android:text="@string/fa_icon_road"
                            android:textColor="@color/primary_text"
                            android:id="@+id/icon_coverage"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                             />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_coverage"
                        android:paddingRight="36dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_background_button"
                        android:gravity="center_vertical"
                        android:paddingLeft="40dp"
                        android:text="@string/trade_coverage"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white_grey" />

                </LinearLayout>


                <LinearLayout
                    android:elevation="2dp"
                    android:id="@+id/ll_new_retailer"
                    android:padding="0.1dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/item_background"
                    android:orientation="horizontal"
>
                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_background_image">

                        <TextView
                            android:textSize="32sp"
                            android:text="@string/fa_icon_new_retailer"
                            android:textColor="@color/primary_text"
                            android:id="@+id/icon_new_retailer"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_new_retailer"
                        android:paddingRight="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_background_button"
                        android:gravity="center_vertical"
                        android:paddingLeft="40dp"
                        android:text="@string/new_retailer"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white_grey" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_reports"
                    android:elevation="2dp"
                    android:padding="0.1dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/item_background"
                    android:orientation="horizontal"
>
                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_background_image">

                        <TextView
                            android:textSize="32sp"
                            android:text="@string/fa_icon_bar_chart"
                            android:textColor="@color/primary_text"
                            android:id="@+id/icon_reports"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_reports"
                        android:paddingRight="56dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_background_button"
                        android:gravity="center_vertical"
                        android:paddingLeft="40dp"
                        android:text="@string/reports"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white_grey" />

                </LinearLayout>

                <LinearLayout
                    android:elevation="2dp"
                    android:id="@+id/ll_synchronization"
                    android:padding="0.1dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/item_background"
                    android:orientation="horizontal"
                    >

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_background_image">

                        <TextView
                            android:textSize="32sp"
                            android:text="@string/fa_icon_refresh"
                            android:textColor="@color/primary_text"
                            android:id="@+id/icon_synchronization"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_synchronization"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_background_button"
                        android:gravity="center_vertical"
                        android:paddingLeft="40dp"
                        android:text="@string/synchronization"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white_grey" />

                </LinearLayout>
                <FrameLayout
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.5"
                            android:background="@color/primary_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:textColor="@color/primary_text"
                            android:text="@string/app_name"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.5"
                            android:background="@color/primary_text" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
