<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parent_layout"
    android:background="@color/crispy_white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/crispy_white"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.3"
                            android:text="@string/retailer_name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        <EditText
                            android:id="@+id/et_new_retailer_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@drawable/login_activity_edit_text"
                            android:inputType="text"
                            android:maxLines="1"
                            android:minHeight="40dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:textColor="@color/secondary_text"
                            android:textColorHint="@color/secondary_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.3"
                            android:text="@string/contact_person_name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        <EditText
                            android:id="@+id/et_contact_person"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@drawable/login_activity_edit_text"
                            android:inputType="text"
                            android:maxLines="1"
                            android:minHeight="40dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:textColor="@color/secondary_text"
                            android:textColorHint="@color/secondary_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.3"
                            android:text="@string/address"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@drawable/login_activity_edit_text"
                            android:inputType="text"
                            android:maxLines="1"
                            android:minHeight="40dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:textColor="@color/secondary_text"
                            android:textColorHint="@color/secondary_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.3"
                            android:text="@string/phone"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@drawable/login_activity_edit_text"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:minHeight="40dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:textColor="@color/secondary_text"
                            android:textColorHint="@color/secondary_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:layout_weight="4.3"
                            android:text="@string/channel"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/login_activity_edit_text"
                                android:gravity="right"
                                android:minHeight="32dp"
                                android:padding="4dp">

                                <Spinner
                                    android:id="@+id/sp_channels"
                                    android:layout_width="192dp"
                                    android:layout_height="32dp"
                                    android:gravity="center"
                                    android:paddingLeft="4dp" />
                            </RelativeLayout>
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.3"
                            android:text="@string/subchannel"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/login_activity_edit_text"
                                android:gravity="right"
                                android:minHeight="32dp"
                                android:padding="4dp">

                                <Spinner
                                    android:id="@+id/sp_sub_channels"
                                    android:layout_width="192dp"
                                    android:layout_height="32dp"
                                    android:gravity="center"
                                    android:paddingLeft="4dp" />
                            </RelativeLayout>
                        </FrameLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/suggested_visit_day"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/primary_text" />

                        <LinearLayout
                            android:id="@+id/cb_sun_wed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/sun"
                                android:textColor="@color/secondary_text" />

                            <CheckBox

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/mon"
                                android:textColor="@color/secondary_text" />

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/tue"
                                android:textColor="@color/secondary_text" />

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/wed"
                                android:textColor="@color/secondary_text" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cb_thur_sat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">


                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/thur"
                                android:textColor="@color/secondary_text" />

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/fri"
                                android:textColor="@color/secondary_text" />

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/sat"
                                android:textColor="@color/secondary_text" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/week_no"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/primary_text" />

                        <LinearLayout
                            android:id="@+id/cb_wk1_wk4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/wk1"
                                android:textColor="@color/secondary_text" />

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/wk2"
                                android:textColor="@color/secondary_text" />

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/wk3"
                                android:textColor="@color/secondary_text" />

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/wk4"
                                android:textColor="@color/secondary_text" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </FrameLayout>
    </ScrollView>

</LinearLayout>