<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent_layout"
    android:layout_height="match_parent"
    android:background="@color/crispy_white"
    android:orientation="vertical"
    tools:context="mydist.mydist.fragments.StoreInfoInvoiceFragment">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ariel 3kg"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/primary_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp">

            <android.support.v7.widget.SearchView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                app:iconifiedByDefault="true"
                app:queryHint="@string/search_hint" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:scrollbars="none">

            <TableLayout
                android:id="@+id/tl_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow android:minHeight="36dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:minWidth="120dp"
                        android:text="Aried"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:minWidth="56dp"
                        android:text="Avail."
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:minWidth="56dp"
                        android:text="SO"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:minWidth="56dp"
                        android:text="OC"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:minWidth="56dp"
                        android:text="OP"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:minWidth="72dp"
                        android:text="Total"
                        android:textColor="@color/white" />
                </TableRow>





            </TableLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Value"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/white"
                android:gravity="center_vertical|right"
                android:paddingRight="4dp"
                android:text="1,956.03"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/crispy_red" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Dist%"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/white"
                android:gravity="center_vertical|right"
                android:paddingRight="4dp"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/crispy_red" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>
