<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_invoice_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:textColor="@color/crispy_green"
        android:textSize="18sp"
        tools:text="Invoice Name" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        tools:text="29/01/2018" />

    <TextView
        android:textColor="@color/primary_text"
        android:id="@+id/tv_total_label"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/tv_invoice_id"
        android:layout_alignStart="@+id/tv_invoice_id"
        android:layout_below="@+id/tv_invoice_id"
        android:layout_marginBottom="8dp"
        android:text="Total"
        android:textSize="16sp" />


    <TextView
        android:layout_alignBottom="@id/tv_total_label"
        android:id="@+id/tv_total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_date"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="14sp"
        tools:text="Text" />

    <TextView
        android:textColor="@color/primary_text"
        android:id="@+id/tv_collection_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_total_label"
        android:text="@string/collection_amount"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_collection_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:layout_alignBottom="@id/tv_collection_amount_label"
        android:layout_below="@id/tv_total_value"
        android:text="InvoiceName"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_cancelled"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_collection_amount_value"
        android:gravity="right"
        android:text="@string/cancelled"
        android:textColor="@color/crispy_red"
        android:textSize="16sp" />
</RelativeLayout>